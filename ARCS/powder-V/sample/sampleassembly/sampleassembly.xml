<?xml version="1.0"?>

<!DOCTYPE SampleAssembly>

<SampleAssembly name="X"
   max_multiplescattering_loops_among_scatterers="1"
   max_multiplescattering_loops_interactM_path1="4"
   min_neutron_probability=".1"
 >


  <PowderSample name="mysample" type="sample">
    <Shape>
    <sphere radius="0.01*m"/>
    </Shape>
    <Phase type="crystal">
      <ChemicalFormula>O3V2</ChemicalFormula>
      <xyzfile>mysample.xyz</xyzfile>
    </Phase>
  </PowderSample>


  <LocalGeometer registry-coordinate-system="InstrumentScientist">

    <Register name="mysample" position="(0,0,0)" orientation="(0, 0, 0)"/>

  </LocalGeometer>


  <Environment temperature="300*K"/>


</SampleAssembly>
